{
    "editor.cursorBlinking": "phase",
    "editor.cursorSmoothCaretAnimation": true,
    "editor.find.autoFindInSelection": "always",
    "editor.fontFamily": "'Cascadia Code', Consolas, 'Fira Code', monospace",
    "editor.fontLigatures": true,
    "editor.formatOnPaste": true,
    "editor.formatOnSave": true,
    "editor.minimap.renderCharacters": false,
    "editor.mouseWheelZoom": true,
    "editor.multiCursorModifier": "ctrlCmd",
    "editor.renderLineHighlight": "all",
    "editor.renderWhitespace": "boundary",
    "editor.rulers": [
        80
    ],
    "editor.smoothScrolling": true,
    "editor.suggest.localityBonus": true,
    "editor.suggest.statusBar.visible": true,
    "explorer.incrementalNaming": "smart",
    "explorer.openEditors.visible": 0,
    "files.insertFinalNewline": true,
    "files.trimFinalNewlines": true,
    "files.trimTrailingWhitespace": true,
    "problems.showCurrentInStatus": true,
    "terminal.integrated.cursorBlinking": true,
    "terminal.integrated.fontFamily": "'Cascadia Code', Consolas, 'Fira Code', monospace",
    "terminal.integrated.rendererType": "dom",
    "window.menuBarVisibility": "toggle",
    "workbench.colorTheme": "Monokai Pro (Filter Spectrum)",
    "workbench.editor.revealIfOpen": true,
    "workbench.iconTheme": "Monokai Pro (Filter Spectrum) Icons",
    "workbench.list.smoothScrolling": true,
    "workbench.settings.editor": "json",
    "workbench.settings.useSplitJSON": true,
    // C/C++ (ms-vscode.cpptools)
    "C_Cpp.clang_format_fallbackStyle": "Google",
    "C_Cpp.default.cStandard": "c18",
    "C_Cpp.default.cppStandard": "c++20",
    // Cargo (panicbit.cargo)
    "cargo.automaticCheck": false,
    // Choose A License (ultram4rune.vscode-choosealicense)
    "license.author": "Federico Dami√°n Schonborn <fdschonborn@gmail.com>",
    "license.year": "2020",
    // Go (golang.Go)
    "go.autocompleteUnimportedPackages": true,
    "go.useLanguageServer": true,
    // Meson (asabil.meson)
    "mesonbuild.buildFolder": "build",
    // Rust Analyzer (matklad.rust-analyzer)
    "rust-analyzer.cargo.loadOutDirsFromCheck": true,
    "rust-analyzer.debug.engine": "vadimcn.vscode-lldb",
    "rust-analyzer.procMacro.enable": true,
    // Path Intellisense (christian-kohler.path-intellisense)
    "path-intellisense.showHiddenFiles": true,
}
